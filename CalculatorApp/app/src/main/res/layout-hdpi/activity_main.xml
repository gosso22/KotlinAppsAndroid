<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerGray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/showNumbersAndOps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:paddingEnd="5pt"
        android:paddingStart="5pt"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="clearNumbers"
                android:text="AC"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="+/-" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buPercentage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="calculatePercentage"
                android:text="%"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operationButtonsColor"
                android:onClick="buOpEvent"
                android:text="&#247;"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operationButtonsColor"
                android:onClick="buOpEvent"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operationButtonsColor"
                android:onClick="buOpEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="buNumberEvent"
                android:background="@color/buttonColor"
                android:layout_marginRight="0.5pt"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operationButtonsColor"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bu0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="2"
            android:background="@color/buttonColor"
            android:text="0"
            android:onClick="buNumberEvent"
            android:layout_marginRight="0.5pt"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buttonColor"
            android:text="."
            android:onClick="buNumberEvent"
            android:layout_marginRight="0.5pt"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buEqual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/operationButtonsColor"
            android:text="="
            android:onClick="evaluationEvent"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>