<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/secondary_color" />
            <stroke android:color="@color/primary_color" android:width="2dp"/>
            <corners android:radius="5dp" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:right="8dp"
                android:left="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/secondary_color"
                android:endColor="@color/primary_color" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
            <corners android:radius="8dp" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:bottom="8dp"
                android:top="8dp" />
        </shape>
    </item>

</selector>